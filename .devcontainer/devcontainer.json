// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/devcontainers/images/tree/main/src/python
{
    "name": "Python 3",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "args": {
            "WORKSPACE": "${containerWorkspaceFolder}"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:1": {},
        // "ghcr.io/devcontainers/features/python:1": {
        //     "version": "3.11"
        // },
        "ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "containerEnv": {
        "HOST_NAME": "host.docker.internal"
    },
    "mounts": [
        "source=devcontainer-bashhistory,target=/commandhistory,type=volume",
        "source=${localWorkspaceFolderBasename}-venv,target=${containerWorkspaceFolder}/.venv,type=volume"
    ],
    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Set *default* container specific settings.json values on container create.
            "settings": {
                // python
                "python.languageServer": "Pylance",
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                },
                "isort.args": [
                    "--profile",
                    "black"
                ],
                "flake8.args": ["--ignore=E501"],
                "black-formatter.args": ["--line-length=79"],
                // terminal
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.scrollback": 2000,
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "zsh": {
                        "path": "zsh"
                    },
                    "fish": {
                        "path": "fish"
                    },
                    "tmux": {
                        "path": "tmux",
                        "icon": "terminal-tmux"
                    },
                    "pwsh": {
                        "path": "pwsh",
                        "icon": "terminal-powershell"
                    }
                },
                // json
                "[jsonc]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                // editor
                "editor.fontSize": 16,
                "editor.formatOnPaste": false,
                "editor.formatOnType": false,
                "editor.tabSize": 4,
                // system
                "window.zoomLevel": 1,
                //dotfile
                "dotfiles.repository": "https://github.com/galahade/devcontainer_dotfiles.git",
                "dotfiles.targetPath": "/root/dotfiles",
                "dotfiles.installCommand": "/root/dotfiles/install.sh"
            },
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "ms-azuretools.vscode-docker",
                "mutantdino.resourcemonitor",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.flake8",
                "matangover.mypy",
                "ms-python.black-formatter",
                "donjayamanne.python-environment-manager",
                "GitHub.vscode-pull-request-github",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                "eamodio.gitlens",
                "GitHub.vscode-github-actions",
                "GitHub.copilot-nightly",
                "VisualStudioExptTeam.vscodeintellicode",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "redhat.vscode-yaml",
                "vscodevim.vim",
                "streetsidesoftware.code-spell-checker",
                "MS-CEINTL.vscode-language-pack-zh-hans",
                "johnpapa.vscode-peacock",
                "robertz.code-snapshot",
                "timonwong.shellcheck"
            ]
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        5000
    ],
    // Use 'portsAttributes' to set default properties for specific forwarded ports. More info: https://code.visualstudio.com/docs/remote/devcontainerjson-reference.
    // "portsAttributes": {
    //     "9000": {
    //         "label": "Hello Remote World",
    //         "onAutoForward": "notify"
    //     }
    // },
    // Use 'otherPortsAttributes' to configure any ports that aren't configured using 'portsAttributes'.
    // "otherPortsAttributes": {
    //         "onAutoForward": "silent"
    // },
    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "pip3 install -r requirements.txt",
    // "postCreateCommand": "pipenv install --dev",
    //Run setup command in a Dockerfile using a custom ENTRYPOINT or CMD instead of using postStartCommand.
    "overrideCommand": false,
    // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "root",
    // claws: use this option to run as root in container, else you can not save file because the project is in /root
    "containerUser": "root"
}